</head>
<section id="top">
<header>
  <div class="container">
    <!-- logo -->
    <div>
        <a href="/"><p class="top-title">La Dolce Vita Med Spa</p></a>
    </div>

    <!-- menu -->
    <nav class="navmenu">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/products">Products</a></li>
        </ul>
    </nav><!-- end menu -->
    <div class="clear"></div>

    <h2>Our Products</h2>
    <div class="separator"></div>
    <p>Lots and lots of beauty products!</p>
  </div>
</header>
</section>

<main class="portfolio-block">
  <div class="container wow fadeInUp">
    <ul class="portfolio-menu" id="filters">
      <li class="active">
        <a data-filter="*">All</a>
      </li>
      <li>
        <a data-filter=".ageless">Ageless</a>
      </li>
      <li>
        <a data-filter=".vital-c">Vital-C</a>
      </li>
      <li>
        <a data-filter=".ormedic">Ormedic</a>
      </li>
      <li>
        <a data-filter=".clear-cell">Clear-Cell</a>
      </li>
      <li>
        <a data-filter=".the-max">The-Max</a>
      </li>
      <li>
        <a data-filter=".iluma">Iluma</a>
      </li>
      <li>
        <a data-filter=".prevention">Prevention</a>
      </li>
      <li>
        <a data-filter=".body-spa">Body-Spa</a>
      </li>
      <li>
        <a data-filter=".ageless-lashes">Ageless-Lashes</a>
      </li>
      <li>
        <a data-filter=".i-beauty">I-Beauty</a>
      </li>
      <li>
        <a data-filter=".image-md">Image-MD</a>
      </li>
      <li>
        <a data-filter=".i-peel">I-Peel</a>
      </li>
      <li>
        <a data-filter=".o2-lift">O2-Lift</a>
      </li>
    </ul>
    
    <div class="row portfolio-list image-grid">
      
      <% @products.each do |item| %>
      <%= content_tag(:div, class: ["item", "col-md-4", "col-sm-4", "col-xs-12", "#{item.collection}"]) do %>
      
      <%= link_to(item, "data-rel": "prettyPhoto[portfolio55]") do %>
      <%= image_tag item.image, class: "showroom" %>
      <div class="caption">
        <div class="info">
          <h4><%= item.name.upcase %></h4>
          <div class="separator"></div>
          <p><%= item.collection.upcase %></p>
        </div>
      </div>
      <% end %>
      <% end %>
      
      <% end %>
      
    </div>
    <div class="app-item">
      <a class="shortcode_button add-item">Load More</a>
    </div>
  </div>
</main>
