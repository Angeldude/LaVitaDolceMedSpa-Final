<% @products.select do |item| %>
  <% if item.collection == params[:collection] %>
   <ul>
        <li><%= item.name %></li>
        <li><%= item.description %></li>
        <li><%= item.skintype %></li>
        <li><%= item.benefits %></li>
        <li><%= item.directions %></li>
       <li><%= image_tag item.image %></li>
   </ul>
  <% end %>
<% end %>